@using HibernatingRhinos.Loci.Common.Models
@model ChangePasswordModel
@{
	ViewBag.Title = "Change Password";
}
@if (ViewData.ModelState.IsValid == false)
{ 
	<div class="form-error">
		@Html.ValidationSummary(true)
	</div>
}

<h3 class="pull-left-sm">@ViewBag.Title</h3>
<a href="@Url.Action("Index", "Users")" class="btn btn-primary btn-sm pull-right-sm">View users</a>
<div class="clearfix"></div>
<hr />

@using (Html.BeginForm("ChangePassword", "Users", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.EditorFor(x => x.Id)
    @Html.EditorFor(x => x.OldPassword)
    @Html.EditorFor(x => x.NewPassword)
    @Html.EditorFor(x => x.ConfirmPassword)
    
    <div class="form-group">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-primary pull-right">Save</button>
        </div>
    </div>
}